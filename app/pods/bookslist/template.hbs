{{partial "submenu"}}
<div class="common-container">
  <h3 class="common-header"><span>{{title}} {{inline-svg "books" class="icon"}}</span></h3>

  {{#if model}}
  <table class="table table-hover bookslist">
    <thead>
      <th>Book Name</th>
      <th>Author Name</th>
      <th>Publication Name</th>
      <th>Description</th>
      <th>Bought date</th>
      <th>Language</th>
      <th></th>
    </thead>
    <tbody>
      {{#each model}}
      <tr {{action "bookDetails" book_id}} class="cursor-pointer">
        <td>{{book_name}}</td>
        <td>{{author_name}}</td>
        <td>{{pub_name}}</td>
        <td>{{description}}</td>
        <td>{{bought_date}}</td>
        <td>{{language}}</td>
        <td>
          {{#if is_favourite}}{{inline-svg "heart" class="icon"}}{{/if}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class="emptylist">
    <h3>{{inline-svg "sad" class="icon"}} No Books Found</h3>
  </div>
  {{/if}}
</div>
